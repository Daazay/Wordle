<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--  Q W E R T Y U I O P  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:divider="@drawable/empty_tall_divider"
        android:showDividers="middle"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonQ"
            android:text="Q"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonW"
            android:text="W"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonE"
            android:text="E"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonR"
            android:text="R"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonT"
            android:text="T"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonY"
            android:text="Y"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonU"
            android:text="U"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonI"
            android:text="I"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonO"
            android:text="O"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonP"
            android:text="P"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

    </LinearLayout>

    <!--  A S D F G H J K L  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:divider="@drawable/empty_tall_divider"
        android:showDividers="middle"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonA"
            android:text="A"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonS"
            android:text="S"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonD"
            android:text="D"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonF"
            android:text="F"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonG"
            android:text="G"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonH"
            android:text="H"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonJ"
            android:text="J"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonK"
            android:text="K"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/buttonL"
            android:text="L"
            android:textColor="@color/background"
            android:padding="0dp"
            android:layout_width="30dp"
            android:layout_height="55dp"/>

    </LinearLayout>

    <!--  Enter Z X C V B N M Backspace  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/empty_tall_divider"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/buttonEnter"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="Enter"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonZ"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="Z"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="X"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="C"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonV"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="V"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonB"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="B"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonN"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="N"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonM"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="M"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonErase"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:padding="0dp"
            android:text="Erase"
            android:textColor="@color/background" />

    </LinearLayout>

</LinearLayout>